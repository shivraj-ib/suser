{# empty Twig template #}
{% block form_row %}
    {% spaceless %} 
        <div class="form-group">
            {{ form_label(form) }}
            {{ form_widget(form,{'attr':{'class':'form-control'}}) }}
            <div class="field-error">
                {{ form_errors(form) }}
            </div>
        </div>
    {% endspaceless %}            
{% endblock %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
        <div class="field-error">    
        <ul>
            {% for error in errors %}
                <li>{{ error.message }}</li>
            {% endfor %}
        </ul>
        </div>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}